{
  "name": "react-native-animated-modal",
  "version": "1.0.0",
  "description": "Flexible React Native Modal with animated gestures and scrollable integration.",
  "author": "hyoper <tolcelik11@gmail.com> (https://github.com/hyoper)",
  "homepage": "https://github.com/hyoper/react-native-animated-modal",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyoper/react-native-animated-modal"
  },
  "license": "MIT",
  "main": "lib/module/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "source": "src/index",
  "react-native": "src/index",
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    "react",
    "react-native",
    "android",
    "ios",
    "popup",
    "modal",
    "animated",
