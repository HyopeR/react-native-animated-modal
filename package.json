{
  "name": "react-native-animated-modal",
  "version": "0.0.1",
  "description": "Modal component prepared with Reanimated.",
  "author": "hyoper <tolcelik11@gmail.com> (https://github.com/hyoper)",
  "homepage": "https://github.com/hyoper/react-native-animated-modal",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyoper/react-native-animated-modal"
  },
  "license": "MIT",
  "main": "lib/commonjs/index.js",
  "types": "lib/typescript/index.d.ts",
  "source": "src/index",
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    "react",
    "react-native",
    "android",
    "ios",
    "popup",
    "modal",
    "animated",
    "typescript"
  ],
  "scripts": {
    "prepare": "bob build",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint --ext ts,tsx src/",
    "build": "bob build",
    "clean": "del-cli lib",
    "docs": "typedoc --out docs src/index.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/runtime": "^7.25.0",
    "@react-native/babel-preset": "0.79.6",
    "@react-native/eslint-config": "0.79.6",
    "@react-native/metro-config": "0.79.6",
    "@react-native/typescript-config": "0.79.6",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "del-cli": "^7.0.0",
    "eslint": "^8.19.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "2.8.8",
    "react": "19.0.0",
    "react-native": "0.79.6",
    "react-native-builder-bob": "~0.39.1",
    "react-native-gesture-handler": "~2.27.2",
    "react-native-reanimated": "~3.19.1",
    "typedoc": "^0.28.13",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-native": ">=0.78.0",
    "react-native-gesture-handler": ">=2.26.0",
    "react-native-reanimated": ">=3.19.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
